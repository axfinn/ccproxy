# ccproxy environment variables
# Copy this file to .env and fill in your values

# JWT signing secret (required)
CCPROXY_JWT_SECRET=your-secure-jwt-secret-here

# Admin key for management operations (required)
CCPROXY_ADMIN_KEY=your-admin-key-here

# Server configuration
CCPROXY_SERVER_PORT=8080
CCPROXY_SERVER_HOST=0.0.0.0
CCPROXY_SERVER_MODE=both

# Claude API keys (comma-separated for multiple keys)
# CCPROXY_CLAUDE_API_KEYS=sk-ant-api-xxx1,sk-ant-api-xxx2

# Claude API URL (optional, defaults to https://api.anthropic.com)
# CCPROXY_CLAUDE_API_URL=https://api.anthropic.com

# Claude Web URL (optional, defaults to https://claude.ai)
# CCPROXY_CLAUDE_WEB_URL=https://claude.ai

# Key load balancing strategy: round_robin or random
CCPROXY_CLAUDE_KEY_STRATEGY=round_robin

# JWT configuration
CCPROXY_JWT_DEFAULT_EXPIRY=720h
CCPROXY_JWT_ISSUER=ccproxy

# Database path
CCPROXY_STORAGE_DB_PATH=./ccproxy.db
